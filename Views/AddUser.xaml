<Window x:Class="wpfMVVM_Prueba.Views.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfMVVM_Prueba.Views"
        mc:Ignorable="d"
        Title="AddUser" Height="400" Width="350">
    <Grid>
        <Button x:Name="Submit" Command="{Binding AddUserCommand}" Content="SUBMIT" HorizontalAlignment="Center" Margin="0,258,0,0" VerticalAlignment="Top" Height="24" Width="84" Click="Button_Click"/>
        <Label Content="Introduzca su nombre:" HorizontalAlignment="Center" Margin="0,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Introduzca su email" HorizontalAlignment="Center" Margin="0,153,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,88,0,0" TextWrapping="Wrap" Text="{Binding Nombre}" VerticalAlignment="Top" Width="174" Height="36"/>
        <TextBox HorizontalAlignment="Center" Margin="0,184,0,0" TextWrapping="Wrap" Text="{Binding Email}" VerticalAlignment="Top" Width="174" Height="37"/>

    </Grid>
</Window>
